<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- push -->
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/palette_blue_2"/>
            <stroke
                android:width="3dp"
                android:color="@color/palette_blue_5"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <!-- no push -->
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/black"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</selector>