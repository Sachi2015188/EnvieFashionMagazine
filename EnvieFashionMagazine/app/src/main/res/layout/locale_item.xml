<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/ui_diff_medium"
        android:layout_height="@dimen/ui_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/locale_image"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/listview_icon"
            android:layout_height="@dimen/listview_icon"/>

        <TextView
            android:id="@+id/locale_text"
            android:layout_marginLeft="@dimen/ui_diff_medium"
            android:gravity="center|left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_height">
        </TextView>

    </LinearLayout>
</merge>